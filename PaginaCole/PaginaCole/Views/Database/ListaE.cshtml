@model List<Estudiantes>

@{
    ViewData["Title"] = "ListaE";
}

<!DOCTYPE html>
<html style="font-size: 16px;">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="CTP Maximo Quesada">
    <meta name="description" content="">
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>Lista de Estudiantes</title>
    <link rel="stylesheet" href="~/css/database.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
</head>

<body class="u-body u-xl-mode">
    <section class="u-clearfix u-white u-section-1" id="sec-4a77">
        <div class="card">
            <div class="card-header">
                Lista Estudiantes
            </div>
            <div class="card-body">
                <a asp-action="GuardarE" asp-controller="Database" class="btn btn-success">Agregar Estudiante</a>
                <a asp-action="EliminarCuentaE" asp-controller="Database" class="btn btn-warning">Eliminar Cuenta y Estudiante</a>
                <hr />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Cedula</th>
                            <th>Nombre</th>
                            <th>Apellido1</th>
                            <th>Apellido2</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Cedula</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido1</td>
                                <td>@item.Apellido2</td>
                                <td>
                                    <a asp-action="ModificarE" asp-controller="Database" asp-route-Cedula="@item.Cedula" class="btn btn-primary btn-sm">Editar</a>
                                    <a asp-action="EliminarE" asp-controller="Database" asp-route-Cedula="@item.Cedula" class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>
</html>