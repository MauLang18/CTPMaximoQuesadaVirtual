@model EmailDto

@{
    ViewData["Title"] = "Contacto";
}

<!DOCTYPE html>
<html style="font-size: 16px;">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="CTP Maximo Quesada">
    <meta name="description" content="">
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>Contacto</title>
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/contacto.css">
</head>

<body class="u-body u-xl-mode">
    <!-- Contact Us Section -->
    <br>
    <br>
    <!-- Contenido -->
    <section class="Material-contact-section section-padding section-dark">
        <div class="container">
            <div class="row">
                <!-- Titulo -->
                <div id="titulo">
                    <div class="col-md-12 wow animated fadeInLeft" data-wow-delay=".2s">
                        <h1 class="titulo"> <b>Contacto</b> </h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Seccion de la izquierda -->
                <div class="col-md-6 mt-3 contact-widget-section2 wow animated fadeInLeft" data-wow-delay=".2s">
                    <div id="textoC">
                        <p>
                            Si desea contactarnos puede hacerlo mediante una llamda, ir presencialmente a las instalaciones o
                            llenando el siguiente formulario, abajo puede encontrar informacion que le puede ser de utilidad
                        </p>
                    </div>
                    <div id="textoC">
                        <div class="find-widget">
                            <li><b>Colegio Tecnico Maximo Quesada</b> </li>
                        </div>

                        <div class="find-widget">
                            <li><b>Ubicacion: Desamparados, Patarra</b> </li>
                        </div>

                        <div class="find-widget">
                            <li><b>Telefono: 2276-4262</b> </li>
                        </div>

                        <div class="find-widget">
                            <li><b>Horario: 7am - 4:15pm Lunes a Viernes</b> </li>
                        </div>
                    </div>
                </div>
                <!-- contacto -->
                <div class="col-md-6 wow animated fadeInRight" data-wow-delay=".2s">
                    <form class="shake" asp-action="SendEmail" asp-controller="Contacto" role="form" method="post"
                          id="contactForm" data-toggle="validator">
                        <!-- Nombre -->
                        <div class="form-group label-floating">
                            <label class="control-label" for="name">Nombre</label>
                            <input asp-for="Name" class="form-control" id="name" type="text" name="name" required
                                   data-error="Ingrese su nombre">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                        <!--Correo -->
                        <div class="form-group label-floating">
                            <label class="control-label" for="email">Correo</label>
                            <input asp-for="Email" class="form-control" id="email" type="email" name="email" required
                                   data-error="Ingrese su email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                        <!-- Titulo -->
                        <div class="form-group label-floating">
                            <label class="control-label">Titulo</label>
                            <input asp-for="Subject" class="form-control" id="msg_subject" type="text" name="subject" required
                                   data-error="ingrese el titulo del mensaje">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                            <div class="help-block with-errors"></div>
                        </div>
                        <!-- Mensaje -->
                        <div class="form-group label-floating">
                            <label for="message" class="control-label">Mensaje</label>
                            @*<input type=asp-for="Body" class="form-control" rows="3" id="message" name="message" runat="server"
                            required data-error="Escriba su mensaje"></inputtypr>
                            <span asp-validation-for="Body" class="text-danger"></span>
                            <div class="help-block with-errors"></div>*@
                            @*@Html.LabelFor(model => model.Body, htmlAttributes: new {@class="control-label"})*@
                            @Html.EditorFor(model => model.Body, new {htmlAttributes = new {@class="form-control"}})
                            @Html.ValidationMessageFor(model => model.Body, "", new {@class="text-danger"})
                        </div>
                        <!-- Enviar -->
                        <div class="form-submit mt-5">
                            <button class="btn btn-info" type="submit" id="form-submit">
                                <i class="material-icons mdi mdi-message-outline"></i> Enviar
                            </button>
                            <div id="msgSubmit" class="h3 text-center hidden"></div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
